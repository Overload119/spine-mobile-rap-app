@import '../_palette.styl'

.yellow-btn
  color: white
  box-shadow: 0 1px 0px 1px (tan + 20%) inset
  border: 0
  border-bottom: 2px solid (tan - 15%)
  float: left
  text-align: center
  background-color: tan

.submitView
  .submit-txt-box
    background-color: bgColor - 15%
    outline: none
    border: 1px solid (bgColor - 30%)
    float: left
    border-radius: 0
    color: white
    box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.15) inset
  .simple
    float: left
    width: 80%
    margin: 0 10% 1em 10%
    text-align: left
  .submit-verse
    text-align: left
    float: left
    margin: 0
    font-size: 3em
    font-family: 'BebasNeueRegular'
    width: 80%
    border-bottom: 1px solid yellow
    margin: 0 10% 0.333em 10%
  .lines
    width: 80%
    float: left
    margin: 0 10% 1em 10%
    .line-entry
      @extends .submitView .submit-txt-box
      width: 100%
      font-size: 1em
      padding: 3px 3px
      margin-top: 5px
  .submit-btn
    @extends .yellow-btn
    width: 100%
    position: absolute
    bottom: 0px
    left: 0px
    font-size: 1.5em
    height: 2em
    &:active
      background-color: (tan - 15%)
      border-bottom: 0
      box-shadow: 0 1px 0 1px (tan - 30%) inset
  .hashtag-container
    float: left
    width: 100%
    margin: 0
    padding: 0 5%
    .hashtag-indicator
      float: left
      width: 5%
      text-align: center
      font-size: 100%
      line-height: 2em
      color: tan
      height: 100%
    .hashtag-txt
      @extends .submitView .submit-txt-box
      width: 30%
      height: 2em
      font-size: 100%
      padding: 1px
      border-color: yellow
    .hashtag-add-btn
      @extends .yellow-btn
      margin: 0
      width: 15%
      padding: 0 2px
      height: 100%
      line-height: 2em
      height: 2em
      text-align: center
      font-size: 1em
      &:active
        background-color: (tan - 15%)
        border-bottom: 0
        box-shadow: 0 1px 0 1px (tan - 30%) inset
    .hashtag-tags
      float: left
      margin: 0
      padding: 0
      list-style-type: none
      width: 50%
      height: 100%
      overflow: hidden
      padding-left: 1em
      li
        color: white
        float: left
        line-height: 2em
        height: 100%
        margin-right: 0.5em
